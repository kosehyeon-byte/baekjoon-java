package baekjoon_250823;

import java.util.Scanner;

public class No2562 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int[] arr = new int[9];
		int max = 0;
		int key = 0;
		
		for (int i=0; i < 9; i++) {
			arr[i]=sc.nextInt();
		}
		
		for (int j=0; j < 9; j++) {
			if (arr[j] > max) {
				max = arr[j];
				key = j+1;
			}
			System.out.println(max);
			System.out.println(key);
		}
		
		sc.close();

	}

}
